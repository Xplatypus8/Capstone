<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/msDateTV"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:text="01/10/2018"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <android.support.v7.widget.CardView
                android:id="@+id/msEmployee2"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/msDateTV"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="18dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Amount Needed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="15sp"
                app:cardBackgroundColor="@color/buttonColor"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/msEmployee1TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unassigned"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/msEmployee1"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/msDateTV"
                android:layout_marginLeft="-26dp"
                android:layout_marginTop="42dp"
                android:layout_toRightOf="@id/msDateTV"
                android:text="Vanilla Mix"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="25sp"
                app:cardBackgroundColor="@color/buttonColor"
                app:cardCornerRadius="25dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/msEmployee2TV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unassigned"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>