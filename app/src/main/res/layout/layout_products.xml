<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/invDateTV"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:text="01/10/2018"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/invQuantityTV"
                android:layout_width="165dp"
                android:layout_height="21dp"
                android:layout_alignBottom="@+id/invDateTV"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="73dp"
                android:layout_marginBottom="19dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Amount Needed"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/invTitleTV"
                android:layout_width="212dp"
                android:layout_height="32dp"
                android:layout_alignTop="@+id/invDateTV"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/invDateTV"
                android:text="Vanilla Mix"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="25sp" />



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>